#include<cstdio>
#include<iostream>
using namespace std;
int main()
{
    int t;
    scanf("%d",&t);
    while(t--)
    {
        string p;
        cin>>p;
        int i=0;
        int l=p.length();
        int count=0;
        int y=0;
        int day=0;
        for(i=0;i<l;i++)
        {
            count=0;
            while(p[i]=='.')
            {
 
                count++;
i++;
            }
            if(count>y)
            {
            y=count;
            day++;
            }
        }
        cout<<day<<endl;
 
 
 
    }
 
}
