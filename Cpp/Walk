    #include<bits/stdc++.h>
    using namespace std;
    int main()
    {
     
        int t;
        scanf("%d",&t);
        while(t--)
        {
     
            int n;
            int i;
            cin>>n;
            long long int maxi=0;
            for(i=1;i<=n;i++)
            {
                int a;
                scanf("%d",&a);
                if((a+i-1)>maxi)
                maxi=a+i-1;
     
            }
            cout<<maxi<<endl;
     
     
     
        }
     
     
     
    }
     
