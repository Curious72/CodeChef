    #include <iostream>
    #include<cstdio>
    using namespace std;
     
    int main()
    {
        int t;
        scanf("%d",&t);
        while(t>0)
        {
            int g;
            scanf("%d",&g);
            while(g>0)
            {
     
                int i,n,q;
                scanf("%d %d %d",&i,&n,&q);
                if(n&1)
                {
                    if(i==1)
                    {
     
                        if(q==1)
                            printf("%d \n",n>>1);
                        else
                            printf("%d \n",((n>>1)+1));
                    }
                    else
                    {
                        if(q==1)
                            printf("%d \n",(n>>1)+1);
                        else
                            printf("%d \n",n>>1);
     
     
                    }
                }
                        else
                    printf("%d \n",n>>1);
    g--;
    }
    t--;
    }
    }
     
