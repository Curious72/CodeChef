#include<bits/stdc++.h>

using namespace std;

int main()

{

    int t;

    cin>>t;

    while(t--)

    {

        int n;

        cin>>n;

    string s;

    cin>>s;

 int i;

 unsigned long long int count=0;

 for(i=0;i<n;i++)

 {

     if(s[i]=='1')

        count++;

 }

 

 unsigned long long int sum=count*(count+1);

 sum=sum/2;

 cout<<sum<<endl;

 

}

}

