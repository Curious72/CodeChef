#include<cstdio>
#include<iostream>
using namespace std;
int main()
{
 
    int t;
    scanf("%d",&t);
    while(t--)
    {
        int n;
        scanf("%d",&n);
        int i=0;
        int sum=0;
        for(i=0;i<n;i++)
        {
            int a,b;
            scanf("%d %d",&a,&b);
            sum=sum+a-b;
        }
 
        cout<<sum<<endl;
    }
 
 
 
 
}
